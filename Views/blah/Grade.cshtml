@model GradeModel; 

<!--Grade Calculator (form)-->
<h1>GRADE CALCULATOR (enter in final %): </h1>
<form method="post">
    <label>Assignments: </label>
    <input type="number" id="assignments" asp-for="A" /> / 50% <br />
    <label>Group Project: </label>
    <input type="number" id="group" asp-for="GP"/> / 10%<br />
    <label>Quizzes: </label>
    <input type="number" id="quizzes" asp-for="Q" /> / 10%<br />
    <label>Midterm Exam: </label>
    <input type="number" id="midterm" asp-for="ME" /> / 10%<br />
    <label>Final Exam: </label>
    <input type="number" id="final" asp-for="F" /> / 10%<br />
    <label>INTEX: </label>
    <input type="number" id="intex" asp-for="I"/> / 10%<br /><br />
    <button type="submit" onclick="calcSum()">Calculate</button>
    <br />
    <label>Final Grade: </label>
    <p id="sum"></p>

    <div asp-validation-summary="All"></div>
</form>
